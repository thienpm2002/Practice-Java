package IndianSecretUnit;

import java.util.ArrayList;
import java.util.List;

public class IndianSecretUnit {
	private List<RAWAgent> ds;

    public IndianSecretUnit() {
        ds = new ArrayList<>();
    }

	public void addItem(RAWAgent raw) {
		ds.add(raw);
		System.out.print("Them thanh cong: ");
		raw.displayDetails();
	}

	public void printInfor() {
		for (RAWAgent raw : ds) {
			raw.displayDetails();
		}
	}
	
	public void update(int batchId,String newMission) {
		for (RAWAgent agent : ds) {
            if (agent.getRawAgentBatchId() == batchId) {
                agent.setMissionName(newMission);
                System.out.println("New mission assigned to " + agent.getCodeName());
            }
        }
	}
}
