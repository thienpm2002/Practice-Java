package EasyProblems;

public class ReverseNumber {

	public static int solution(int n) {
		int index = 0;
		int result = 0;
		int tmp = n;
		int[] arr = new int[10];
		while (tmp != 0) {
			int a = tmp % 10;
			tmp = tmp / 10;
			arr[index] = a;
			index++;
		}

		for (int i = index - 1; i >= 0; i--) {
			result = (int) (result + arr[index-i -1] * Math.pow(10, i));
		}
		return result;
	}

	public static void main(String[] args) {
		int n = 122;
		System.out.println(solution(n));
	}
}
