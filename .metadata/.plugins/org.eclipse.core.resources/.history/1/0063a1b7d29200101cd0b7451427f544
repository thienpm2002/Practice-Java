package Array;

public class SubArr {
	static void solution(int[] arr, int start, int end) {
		if (end == arr.length)
			return;

		if (start > end)
			solution(arr, 0, end + 1);
		else {
			for (int i = start; i < end; i++) {
				System.out.print(arr[i] + " ");
			}
			System.out.println(arr[end]);
			solution(arr, start + 1, end);
		}

	}

	public static void main(String[] args) {
		int[] arr = { 1, 2, 3 };
		solution(arr, 0, 0);
	}
}
