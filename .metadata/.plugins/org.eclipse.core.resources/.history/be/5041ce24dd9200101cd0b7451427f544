package Array;

public class ZerosEndArray {
	static void swap(int[] arr, int start, int end) {
		int tmp = arr[start];
		arr[start] = arr[end];
		arr[end] = tmp;
	}

	static void solution(int[] arr) {
		int n = arr.length;
		if (n == 0)
			return;
		int index = 0;
		for (int i = n - 1; i >= 0; i--) {
			if (arr[i] != 0) {
				index = i;
			}
			if (arr[i] != 0 && arr[i + 1] == 0) {
				swap(arr, index, i+1);
				index = i + 1;
			}
		}
	}

	public static void main(String[] args) {
		int[] arr = { 1, 2, 0, 4, 3, 0, 5, 0 };

		solution(arr);

		for (int i = 0; i < arr.length; i++) {
			System.out.print(arr[i] + " ");
		}
	}
}
