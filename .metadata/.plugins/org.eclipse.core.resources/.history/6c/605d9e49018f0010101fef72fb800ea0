package EasyProblems;

public class ArmstrongNumbers {
	static boolean solution(int n) {
		int sum = 0;
		int tmp = n;
		int index =0;
		int[] arr = new int[10];
		while (tmp != 0) {
			int a = tmp % 10;
	        arr[index] = a;
	        index++;
			tmp = tmp / 10;
		}
		for(int i =0; i<index ; i++) {
			sum += Math.pow(arr[i], index);
		}
		return sum == n;
	}

	public static void main(String[] args) {
		System.out.println(solution(9474) ? "True" : "False");
	}
}
