package Array;

public class NoName {
	static int solution(int[] arr, int k) {
		int result = 0;
		for(int i = 0; i< arr.length-2; i++) {
			if(Math.abs(arr[i] - arr[i+1]) % k !=0 ) return -1;
			result += Math.abs(arr[i] - arr[i+1]) / k;
		}
		return result;
	}
    public static void main(String[] args) {
		int[] arr = {4,4,4,4,4};
		int k = 3;
		System.out.println(solution(arr), k);
	}
}
