package Array;

public class MinimumCostost {
	static int solution(int[] arr, int n) {
		int min = Integer.MAX_VALUE;
		for (int i = 0; i < n; i++) {
			if (min > arr[i])
				min = arr[i];
		}
		return min * (n - 1);
	}

	public static void main(String[] args) {
		int[] arr = { 3, 4 };
		int n = arr.length;
		System.out.println(solution(arr, n));
	}
}
