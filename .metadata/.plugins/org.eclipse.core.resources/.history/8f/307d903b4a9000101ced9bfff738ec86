package EasyProblems;

public class PowSet {
	static void solution(String str,int index, String current) {
		if(index == str.length()) {
			System.out.println(current);
			return;
		}
		// bỏ qua ký tự hiện tại
		solution(str, index+1,current);
	
		// Lấy ký tự hiện tại
		solution(str, index+1,current+str.charAt(index));
		
	}

	public static void main(String[] args) {
		solution("abcd",0,"");
	}
}
