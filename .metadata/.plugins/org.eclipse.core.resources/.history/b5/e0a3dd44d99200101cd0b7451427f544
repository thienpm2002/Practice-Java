package Array;

public class RotateArray {
	static void solution(int[] arr, int n) {
		int size = arr.length;
		if(size ==0 ) return;
		if (n > size)
			n = n % size;
		reverse(arr, 0, size-1);
		reverse(arr, 0, n-1);
		reverse(arr, n, size-1);
	}
	
	static void reverse(int[] arr, int start, int end) {
		while(start < end) {
			int tmp = arr[start];
			arr[start] = arr[end];
			arr[end] = tmp;
			start++;
			end--;
		}
	}

	public static void main(String[] args) {
		int[] arr = { 1, 2, 3 };
		int d = 4;
		solution(arr, d);
	}
}
