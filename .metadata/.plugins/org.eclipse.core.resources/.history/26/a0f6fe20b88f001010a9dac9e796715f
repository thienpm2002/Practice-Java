package EasyProblems;

import java.util.ArrayList;

public class PascalTriangle {
	static void solution(int n) {
		ArrayList<int[]> pascal = new ArrayList<>();
		pascal.add(0, new int[] { 1 });
		for (int i = 2; i <= n; i++) {
			int[] arr = new int[i];
			for (int j = 0; j < i; j++) {
				if (j == 0 || j == i - 1)
					arr[j] = 1;
				else
					arr[j] = pascal.get(i - 2)[j - 1] + pascal.get(i - 2)[j];
			}
			pascal.add(arr);
		}
		for (int i = 0; i < n; i++) {
			for (int j = i; j < n; j++) {
				System.out.print(pascal.get(i)[j] + " ");
			}
			System.out.println("");
		}
	}

	public static void main(String[] args) {
		solution(6);
	}
}
