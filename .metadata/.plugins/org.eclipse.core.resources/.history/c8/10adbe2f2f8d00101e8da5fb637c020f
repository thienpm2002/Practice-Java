package mammals;

public class Mammal extends Animal {
     private String furColor;

	 public Mammal(int age, String species, String furColor) {
		super(age, species);
		// TODO Auto-generated constructor stub
		this.furColor = furColor;
	 }
     
	 public void display() {
//		 Mammal:Species:Lion,Age:5,Fur Color:Golden
		 System.out.println("Mamali: Species: " + super.getSpecies() + " ,Age: " + age + " ,Fur Color: " + furColor);
	 }
}
