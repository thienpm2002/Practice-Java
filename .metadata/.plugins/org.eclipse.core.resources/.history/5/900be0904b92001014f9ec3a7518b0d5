package Array;

public class RemoveDuplicates {
	static int solution(int[] arr) {
		int n = arr.length;
		if (n <= 1)
			return n;

		int index = 1;
		for (int i = 1; i < n; i++) {
			if (arr[i] != arr[i - 1]) {
				arr[index++] = arr[i];
			}
		}
		return index;
	}

	public static void main(String[] args) {
		int[] arr = { 2, 2, 2, 2, 2 };
		int newIndex = solution(arr);
		for (int i = 0; i < newIndex; i++) {
			System.out.print(arr[i] + " ");
		}
	}
}
