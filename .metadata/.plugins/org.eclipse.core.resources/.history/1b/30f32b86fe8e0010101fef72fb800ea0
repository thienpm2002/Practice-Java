package EasyProblems;

public class DecimalToBinary {
	static void solution(int n) {
//		while (n != 0) {
//			System.out.print(n % 2);
//			n /= 2;
//		}
		if (n / 2 == 0) {
			System.out.print(n % 2);
			return;
		}
		;
		solution(n / 2);

	}

	public static void main(String[] args) {
		solution(6);
	}
}
