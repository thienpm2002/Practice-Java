package Array;

public class ZerosEndArray {
	static void swap(int[] arr, int start, int end) {
		if (start == end)
			return;
		int tmp = arr[start];
		arr[start] = arr[end];
		arr[end] = tmp;
	}

	static void solution(int[] arr) {
		int n = arr.length;
		if (n == 0)
			return;
		int index = 0;
		for (int i = 0; i < n; i++) {
			if (arr[i] != 0) {
				System.out.println("Swap: " + arr[i] + " " + arr[index] + " index: " + index);
				
				swap(arr, i, index);
				index++;
			}
		}
	}

	public static void main(String[] args) {
		int[] arr = { 1, 2, 0, 4, 3, 0, 5, 0 };

		solution(arr);

		for (int i = 0; i < arr.length; i++) {
			System.out.print(arr[i] + " ");
		}
	}
}
